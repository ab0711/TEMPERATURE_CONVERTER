celsius = float(input("Please enter the temperature in your room in celsius: "))

farenheit = (celsius*1.8) + 32
print("%0.1f degree celsius equals to %0.1f degree farenheit" %(celsius, farenheit))

temp = farenheit

if (temp >= 104):
  print("It's hot!")
elif (temp <= 50):
  print("It's cold!")
else:
  print("The temperature is pleasant!")
